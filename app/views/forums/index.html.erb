<h1>Listing forums</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Title</th>
      <th>Thread</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @forums.reverse.each do |forum| %>
      <tr>
        <td><b><%= forum.username %></b> | <%= time_ago_in_words(forum.created_at) %> ago</td>
        <td><%= link_to "#{forum.title}", forum %></td>
        <td><%= link_to 'Edit', edit_forum_path(forum) %></td>
        <td><%= link_to 'Destroy', forum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Forum', new_forum_path %>
<%= link_to 'Home', root_path %>
